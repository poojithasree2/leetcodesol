
class Solution {
    public int longestBalanced(String s) {
        if(s.length() <= 1){
            return s.length();
        }
        char[] sArr = s.toCharArray();

        int longestBalanced = 0;
        for(int i = 0; i < sArr.length; i++){
            int[] counts = new int[26];
            counts[sArr[i] - 'a'] = 1;
            int distinct = 1;
            int maxFreq = 1;

            for(int j = i+1; j < sArr.length; j++){

                int charIndex = sArr[j] - 'a';
                if(counts[charIndex]== 0){
                    distinct++;
                }
                counts[charIndex]++;
                maxFreq = Math.max(maxFreq, counts[charIndex]);
                int currentLen = j - i + 1;
                if(distinct*maxFreq == currentLen){
                    longestBalanced = Math.max(longestBalanced, currentLen);
                }
            }
        }
    return longestBalanced;

    }
}
